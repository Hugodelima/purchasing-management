<main class="container">
    <h3 class="mt-3">Cadastro do ItemCompra</h3>
    <form action="/menu/compras/itemcompra/cadastrar/{{id_compra}}" method="post" id="my_form" class="col-sm-10 needs-validation mt-5" novalidate>
        <div class="form-group">
            <label for="id_compra">Código da Compra</label>
            <input type="text" class="form-control" name="id_compra" value="{{id_compra}}" readonly>
        </div>

        <table class="table table-bordered text-center text-capitalize">
            <tr class="bg-primary table-active text-uppercase text-white">
                <th scope="col">Código do Produto</th>
                <th scope="col">Quantidade</th>
                <th scope="col">Valor Unitário</th>
                <th scope="col">Remover</th>
            </tr>
            {{#if lista_ItemCompras}}
                {{#each lista_ItemCompras}}
                <tr>
                    <td>{{this.produtoId}}</td>
                    <td>{{this.quantidade}}</td>
                    <td>{{this.valorUnitario}}</td>
                    <td>
                        <button type="button" class="btn btn-link" data-toggle="modal" data-target="#exampleModal{{this.id}}">
                            <i class="bi bi-trash3-fill"style="font-size:30px"></i>
                        </button>

                        <!-- Modal -->
                        <div class="modal" id="exampleModal{{this.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                            <div class="modal-content">
                            <div class="modal-header">
                            <h5 class="modal-title textoNormal">Exclusão de Produto</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            </div>
                            <div class="modal-body m-1">
                                <p class="textoNormal">Tem certeza que deseja excluir este produto?</p>
                            </div>
                            <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                            <a href="/menu/compras/itemcompra/remover/{{this.produtoId}}">
                                <button type="button" class="btn btn-primary">Confirmar</button>
                            </a>
                            </div>
                            </div>
                            </div>
                        </div>       
                    </td>
                </tr>
                {{/each}}
            {{else}}
            <tr>
                <td colspan="45489">Não há produtos</td>
            </tr>
            {{/if}}   
        </table>
        <div class="form-group">

            <label for="DESCRICAO">Código do Produto</label>
            <input type="text" class="form-control" id="codigoProduto" name="codigoProduto" value="{{compra.dataCompra}}" required>
            <div class="invalid-feedback">
                Informe a data de compra
            </div>
        </div>
        <div class="form-group">

            <label for="DESCRICAO">Quantidade</label>
            <input type="text" class="form-control" id="quantidadeProduto" name="quantidadeProduto" value="{{compra.dataCompra}}" required>
            <div class="invalid-feedback">
                Informe a data de compra
            </div>
        </div>
        <div class="form-group">

            <label for="DESCRICAO">Valor unitário</label>
            <input type="text" class="form-control" id="valorProduto" name="valorProduto" value="{{compra.dataCompra}}" required>
            <div class="invalid-feedback">
                Informe a data de compra
            </div>
        </div>

        
        <div class="form-group mt-1">
            <a href="/menu/compras">
                <button type="button" class="btn btn-primary">Voltar</button>
            </a>
            <button class="btn btn-primary float-right">+ Adicionar Produto</button>
        </div>
    </form>
</main>

